/* index.wxss */
.container{
  height: 100%;
  overflow: hidden;
}
.user-box{
  background: #333;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;  
}

.user-box .avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.user-box .username{
  margin-top: 30rpx;
  font-size: 14px;
  color: #fff;
}

.order{
  height: auto;
  overflow: hidden;
  background: #fff;
}

.order .h{
  height: 108rpx;
  padding-left: 30rpx;
  padding-right: 20rpx;
  border-bottom: 1px solid #e6e6e6;
  display: flex;
  align-items: center;
}

.order .h .label{
  flex: 1;
}

.order .h .icon-go{
  width: 44rpx;
  height: 44rpx;
}

.order .b{
  height: 168rpx;
  display: flex;
}

.order .b .item{
  width: 25%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.order .b .icon{
  width: 72rpx;
  height: 72rpx;
}

.order .b .label{
  font-size: 12px;
  color: #666;
}

.order .b .count{
  position: absolute;
  top: 20rpx;
  display: block;
  right: 40rpx;
  font-size: 12px;
  min-width: 16px;
  height: 16px;
  text-align: center;
  line-height: 14px;
  border-radius: 8px;
  border: 1px solid #d81e06;
  color: #d81e06;
}

.section-menu{
  background: #fff;
  height: auto;
  overflow: hidden;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.section-menu .item{
  height: 108rpx;
  width: 100%;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e6e6e6;
  padding: 0 20rpx;
}

.section-menu .item:last-child{
  border-bottom: 1px solid #fff;
}

.section-menu .item .icon{
  width: 44rpx;
  height: 44rpx;
}

.section-menu .item .label{
  margin-left: 10rpx;
  flex: 1;
  font-size: 12px;
}

.section-menu .item .icon-go{
  width: 44rpx;
  height: 44rpx;
}

.logout{
  margin-bottom: 20rpx;
  width: 100%;
  height: 108rpx;
  background: #fff;
  text-align: center;
  line-height: 108rpx;
}