/* catalog.wxss */
page{
  background: #f4f4f4;
}

.search{
  width: 100%;
  height: 150rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search .form{
  height: 60rpx;
  width: 690rpx;
  background: #f4f4f4;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search .input{
  height: 40rpx;
  width: 600rpx;
}

.search .btn{
  height: 40rpx;
  width: 40rpx;
}

.catalog{
  margin-top: 20rpx;
  background: #f4f4f4;
}

.catalog .item{
  margin-bottom: 20rpx;
  background: #fff;
}

.catalog .item .h{
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.catalog .item .b{
  height: auto;
  overflow: hidden;
  padding: 0 10rpx;
}

.catalog .item .a{
  display: block;
  float: left;
  font-size: 12px;
  color: #666;
  margin: 0 10rpx 20rpx 10rpx;
  border: 1px solid #f4f4f4;
  padding:10rpx 20rpx;
}